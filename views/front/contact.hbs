<!doctype html>
<html lang="es">

<head>
  {{> head}}
</head>

<body>

  <div class="site-wrap" id="home-section">
    {{> nav}}

    {{!-- HERO --}}
{{> hero}}

    <div class="site-section bg-light" id="contact-section">
      <div class="container">
        <div class="row">
    {{!-- FORMULARIO DE CONTACTO --}}
          <div class="col-lg-8 mb-5">
            <form action="#" method="post">
              <div class="form-group row">
                <div class="col-md-6 mb-4 mb-lg-0">
                  <input type="text" class="form-control" placeholder="Nombre">
                </div>
                <div class="col-md-6">
                  <input type="text" class="form-control" placeholder="Apellido">
                </div>
              </div>

              <div class="form-group row">
                <div class="col-md-12">
                  <input type="text" class="form-control" placeholder="Email">
                </div>
              </div>

              <div class="form-group row">
                <div class="col-md-12">
                  <textarea name="" id="" class="form-control" placeholder="Escribe tu consulta." cols="30"
                    rows="10"></textarea>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-md-6 mr-auto">
                  <input type="submit" class="btn btn-block btn-primary text-white py-3 px-5" value="Enviar">
                </div>
              </div>
            </form>
          </div>

{{!-- INFORMACION DE CONTACTO --}}
          <div class="col-lg-4 ml-auto">
            <div class="bg-white p-3 p-md-5">
              <h3 class="text-black mb-4">Información de Contacto</h3>
              <ul class="list-unstyled footer-link">
                <li class="d-block mb-3">
                  <span class="d-block text-black">Dirección:</span>
                  <span>Villa del Parque, Av. Nazca 3177. CABA</span>
                </li>
                <li class="d-block mb-3"><span class="d-block text-black">Teléfono:</span><span>+54 911 6264 0985</span></li>
                <li class="d-block mb-3"><span class="d-block text-black">Email:</span><span>info@yourdomain.com</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    {{> footer}}

  </div>

  {{> scripts}}

</body>

</html>